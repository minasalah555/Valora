@model Valora.DTOs.OrderDTO
@{
    ViewData["Title"] = "Cancel Order";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Cancel Order
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Warning:</strong> Are you sure you want to cancel this order? This action cannot be undone.
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Number:</strong>
                            <p class="text-muted">#@Model.OrderId</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Order Date:</strong>
                            <p class="text-muted">@Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            <span class="badge bg-secondary">@Model.OrderStatus</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Total Amount:</strong>
                            <h5 class="text-primary mb-0">$@Model.TotalAmount.ToString("N2")</h5>
                        </div>
                    </div>

                    <hr>

                    <form asp-action="Cancel" method="post">
                        <input type="hidden" name="id" value="@Model.OrderId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Go Back
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-x-circle me-2"></i>Confirm Cancellation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
