@model List<Valora.DTOs.OrderDTO>
@{
    ViewData["Title"] = "My Orders";
}

<div class="py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-2">
                <i class="bi bi-bag-check-fill me-2 text-gradient"></i>My Orders
            </h2>
            <p class="text-muted">Track and manage all your orders in one place</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card hover-lift">
                        <div class="card-header bg-white border-0 py-3">
                            <div class="row align-items-center g-3">
                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-1">Order Number</small>
                                    <h6 class="mb-0 fw-bold">#@order.OrderId</h6>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-1">Order Date</small>
                                    <p class="mb-0 fw-semibold"><i class="bi bi-calendar3 me-1"></i>@order.OrderDate.ToString("MMM dd, yyyy")</p>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-1">Total Amount</small>
                                    <h6 class="mb-0 text-gradient fw-bold">$@order.TotalAmount.ToString("N2")</h6>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-1">Status</small>
                                    <span class="badge 
                                        @(order.OrderStatus == "Delivered" ? "status-delivered" : 
                                          order.OrderStatus == "Cancelled" ? "status-cancelled" : 
                                          order.OrderStatus == "Shipped" ? "status-shipped" : 
                                          order.OrderStatus == "Processing" ? "status-processing" : "status-pending")">
                                        <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>@order.OrderStatus
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="mb-3">Order Items (@order.OrderItems.Count)</h6>
                                    @foreach (var item in order.OrderItems.Take(3))
                                    {
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="badge bg-light text-dark me-2">@item.Quantity x</span>
                                            <span class="me-auto">@item.ProductName</span>
                                            <span class="text-muted">$@item.TotalPrice.ToString("N2")</span>
                                        </div>
                                    }
                                    @if (order.OrderItems.Count > 3)
                                    {
                                        <small class="text-muted">+ @(order.OrderItems.Count - 3) more items</small>
                                    }
                                </div>
                                <div class="col-md-4 text-end">
                                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-primary mb-2">
                                        <i class="bi bi-eye me-1"></i>View Details
                                    </a>
                                    @if (order.OrderStatus != "Delivered" && order.OrderStatus != "Cancelled")
                                    {
                                        <a asp-action="Cancel" asp-route-id="@order.OrderId" class="btn btn-outline-danger mb-2">
                                            <i class="bi bi-x-circle me-1"></i>Cancel Order
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h4 class="mt-3">No Orders Yet</h4>
            <p class="text-muted">You haven't placed any orders yet. Start shopping now!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-shop me-2"></i>Start Shopping
            </a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
