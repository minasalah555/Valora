@model Valora.ViewModels.CreateOrderViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-credit-card me-2"></i>Checkout
            </h2>
            <hr class="mb-4">
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-uppercase" style="letter-spacing:.06em; font-size:.95rem;">
                        <i class="bi bi-truck me-2"></i>Shipping Information
                    </h5>
                    <small class="text-muted">Please fill required fields marked *</small>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CartId" />

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="ShippingAddress" class="form-label text-uppercase small fw-semibold">
                                    <i class="bi bi-geo-alt me-1"></i>Shipping Address *
                                </label>
                                <input asp-for="ShippingAddress" class="form-control" placeholder="Enter your full address" required />
                                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label text-uppercase small fw-semibold">
                                    <i class="bi bi-building me-1"></i>City *
                                </label>
                                <input asp-for="City" class="form-control" placeholder="Enter city" required />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PostalCode" class="form-label text-uppercase small fw-semibold">
                                    <i class="bi bi-mailbox me-1"></i>Postal Code *
                                </label>
                                <input asp-for="PostalCode" class="form-control" placeholder="Enter postal code" required />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label text-uppercase small fw-semibold">
                                    <i class="bi bi-globe me-1"></i>Country *
                                </label>
                                <input asp-for="Country" class="form-control" placeholder="Enter country" required />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label text-uppercase small fw-semibold">
                                    <i class="bi bi-telephone me-1"></i>Phone Number *
                                </label>
                                <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="Enter phone number" required />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label asp-for="Notes" class="form-label text-uppercase small fw-semibold">
                                    <i class="bi bi-sticky me-1"></i>Order Notes (Optional)
                                </label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any special instructions for delivery?"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="Cart" asp-action="ShowTheCart" asp-route-cartId="@Model.CartId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Cart
                            </a>
                            <button type="submit" class="btn btn-dark btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Place Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0 text-uppercase" style="letter-spacing:.06em; font-size:.95rem;">
                        <i class="bi bi-info-circle me-2"></i>Order Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Note:</strong> Review your cart before placing the order. Once placed, the order will be processed.
                    </div>
                    <p class="text-muted mb-3">
                        <i class="bi bi-shield-check me-2"></i>
                        Your information is secure and will not be shared.
                    </p>

                    @if (ViewBag.OrderTotal != null)
                    {
                        <div class="d-flex justify-content-between align-items-center border-top pt-3 mt-3">
                            <strong>Total</strong>
                            <span class="fw-bold">@String.Format("{0:C}", ViewBag.OrderTotal)</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
