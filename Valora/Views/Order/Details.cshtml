@model Valora.DTOs.OrderDTO
@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left me-2"></i>Back to Orders
            </a>
            <h2 class="mb-3">
                <i class="bi bi-receipt me-2"></i>Order Details
            </h2>
            <hr class="mb-4">
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Order Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Order Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Number:</strong>
                            <p class="text-muted">#@Model.OrderId</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Order Date:</strong>
                            <p class="text-muted">@Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            <span class="badge 
                                @(Model.OrderStatus == "Delivered" ? "bg-success" : 
                                  Model.OrderStatus == "Cancelled" ? "bg-danger" : 
                                  Model.OrderStatus == "Shipped" ? "bg-info" : 
                                  Model.OrderStatus == "Processing" ? "bg-warning" : "bg-secondary")">
                                @Model.OrderStatus
                            </span>
                        </div>
                        <div class="col-md-6">
                            <strong>Total Amount:</strong>
                            <h5 class="text-primary mb-0">$@Model.TotalAmount.ToString("N2")</h5>
                        </div>
                    </div>
                    @if (Model.ShippedDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Shipped Date:</strong>
                                <p class="text-muted">@Model.ShippedDate.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    }
                    @if (Model.DeliveredDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Delivered Date:</strong>
                                <p class="text-muted">@Model.DeliveredDate.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-12">
                                <strong>Notes:</strong>
                                <p class="text-muted">@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-box-seam me-2"></i>Order Items
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.ProductName</strong>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">@item.Quantity</span>
                                        </td>
                                        <td class="text-end">$@item.UnitPrice.ToString("N2")</td>
                                        <td class="text-end"><strong>$@item.TotalPrice.ToString("N2")</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total Amount:</strong></td>
                                    <td class="text-end"><h5 class="text-primary mb-0">$@Model.TotalAmount.ToString("N2")</h5></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Shipping Address -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-truck me-2"></i>Shipping Address
                    </h5>
                </div>
                <div class="card-body">
                    <address>
                        @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                        {
                            <strong>Address:</strong><br>
                            @Model.ShippingAddress<br>
                        }
                        @if (!string.IsNullOrEmpty(Model.City))
                        {
                            @Model.City
                            @if (!string.IsNullOrEmpty(Model.PostalCode))
                            {
                                @:, @Model.PostalCode
                            }
                            <br>
                        }
                        @if (!string.IsNullOrEmpty(Model.Country))
                        {
                            @Model.Country<br>
                        }
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <br>
                            <strong>Phone:</strong> @Model.PhoneNumber
                        }
                    </address>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-gear me-2"></i>Actions
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.OrderStatus != "Delivered" && Model.OrderStatus != "Cancelled")
                    {
                        <a asp-action="Cancel" asp-route-id="@Model.OrderId" class="btn btn-danger w-100 mb-2">
                            <i class="bi bi-x-circle me-2"></i>Cancel Order
                        </a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="UpdateStatus" asp-route-id="@Model.OrderId" class="btn btn-warning w-100 mb-2">
                            <i class="bi bi-pencil-square me-2"></i>Update Status
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-list me-2"></i>All Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
