@model Valora.Models.Category?
@{
    ViewData["Title"] = "Delete Category";
    var id = ViewContext.RouteData.Values["id"] ?? string.Empty;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-uppercase" style="letter-spacing:.08em; font-size:.95rem;">
                        <i class="bi bi-trash me-2"></i>Delete Category
                    </h4>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-sm btn-outline-light">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-start" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                        <div>
                            <strong>Warning:</strong> This action is permanent. Are you sure you want to delete this category?
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold mb-1">@Model?.Name ?? ("Category #" + id)</h5>
                        <p class="text-muted mb-0">@Model?.Description ?? "No description provided."</p>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model?.ID.ToString() ?? id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
