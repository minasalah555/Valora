@model Valora.Models.Category?
@{
    ViewData["Title"] = "Edit Category";
    var id = ViewContext.RouteData.Values["id"] ?? string.Empty;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-uppercase" style="letter-spacing:.08em; font-size:.95rem;">
                        <i class="bi bi-pencil-square me-2"></i>Edit Category
                    </h4>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-sm btn-outline-light">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ID" value="@Model?.ID.ToString() ?? id" />
                        <div class="mb-3">
                            <label for="Name" class="form-label text-uppercase small fw-semibold">Name *</label>
                            <input id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="Category name" required />
                            <div class="invalid-feedback">Name is required.</div>
                        </div>
                        <div class="mb-4">
                            <label for="Description" class="form-label text-uppercase small fw-semibold">Description</label>
                            <textarea id="Description" name="Description" rows="4" class="form-control" placeholder="Optional description">@Model?.Description</textarea>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
