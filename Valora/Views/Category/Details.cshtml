@model Valora.Models.Category?
@{
    ViewData["Title"] = "Category Details";
    var id = ViewContext.RouteData.Values["id"] ?? string.Empty;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-uppercase" style="letter-spacing:.08em; font-size: .95rem;">
                        <i class="bi bi-folder2-open me-2"></i>Category Details
                    </h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.ID.ToString() ?? id" class="btn btn-sm btn-outline-light me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.ID.ToString() ?? id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="fw-bold mb-1">@Model?.Name ?? ("Category #" + id)</h5>
                        <p class="text-muted mb-0">@Model?.Description ?? "No description available for this category yet."</p>
                    </div>
                    <hr/>
                    <div class="mt-3 d-flex justify-content-end gap-2">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.ID.ToString() ?? id" class="btn btn-primary">
                            <i class="bi bi-pencil-square me-1"></i>Edit Category
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
