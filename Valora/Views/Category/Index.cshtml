@{
    ViewData["Title"] = "Categories";
    int selectedCategoryId = ViewBag.SelectedCategoryId ?? 1;
}

@inject Valora.Data.Context Db
<style>
    .category-title {
        letter-spacing: 0.15em;
        font-weight: 600;
        font-size: 1.5rem;
        text-transform: uppercase;
        margin: 2rem 0 1.5rem;
        color: #111;
        padding-bottom: 0.5rem;
        border-bottom: 3px solid #111;
        display: inline-block;
    }
    
    .product-card {
        border-radius: 0;
        border: 1px solid #d1d1d1;
        background: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    
    .product-card img {
        object-fit: cover;
        height: 200px;
    }
    
    .add-to-cart-btn {
        font-size: 0.65rem;
        letter-spacing: 0.08em;
    }
    
    .price {
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .cat-label {
        font-size: 0.65rem;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: #666;
    }
</style>

<div class="container py-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @{
        var selectedCategory = Db.Categories.FirstOrDefault(c => c.ID == selectedCategoryId);
        var categoryProducts = Db.Products
            .Where(p => p.CategoryId == selectedCategoryId && !p.IsDeleted)
            .OrderBy(p => p.ID)
            .ToList();
    }

    @if (selectedCategory != null)
    {
        <div class="text-center mb-4">
            <h1 class="category-title">@selectedCategory.Name</h1>
            @if (!string.IsNullOrEmpty(selectedCategory.Description))
            {
                <p class="text-muted mt-2">@selectedCategory.Description</p>
            }
        </div>

        @if (categoryProducts.Any())
        {
            <div class="row g-4">
                @foreach (var product in categoryProducts)
                {
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="product-card h-100 d-flex flex-column">
                            <img src="@product.ImgUrl" alt="@product.Name" class="product-img w-100" />
                            <div class="p-3 d-flex flex-column flex-grow-1">
                                <span class="cat-label mb-1">@selectedCategory.Name</span>
                                <h6 class="fw-semibold text-uppercase mb-1" style="letter-spacing:0.06em">@product.Name</h6>
                                <p class="text-muted small flex-grow-1 mb-2">@product.Description</p>
                                <div class="d-flex justify-content-between align-items-center mt-auto gap-1">
                                    <span class="price">$@product.Price</span>
                                    @if (User?.Identity?.IsAuthenticated == true)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartId" value="0" />
                                            <input type="hidden" name="productId" value="@product.ID" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-sm btn-outline-dark rounded-0 add-to-cart-btn">Add</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-dark rounded-0 add-to-cart-btn">Login</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-secondary text-center">
                <h5>No products available in this category yet</h5>
                <p class="mb-0">Check back soon for new arrivals!</p>
            </div>
        }
    }
</div>
