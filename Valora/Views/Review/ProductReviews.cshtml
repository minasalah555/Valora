@model List<Valora.DTOs.ReviewDTO>
@{
    ViewData["Title"] = "Product Reviews";
    var productId = ViewBag.ProductId as int? ?? 0;
    var averageRating = ViewBag.AverageRating as double? ?? 0;
    var reviewCount = ViewBag.ReviewCount as int? ?? 0;
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-star-fill me-2"></i>Product Reviews
            </h2>
            <hr class="mb-4">
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Rating Summary -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-4 text-center border-end">
                    <h1 class="display-3 mb-0">@averageRating.ToString("F1")</h1>
                    <div class="mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(averageRating))
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            else if (i <= Math.Ceiling(averageRating) && averageRating % 1 != 0)
                            {
                                <i class="bi bi-star-half text-warning"></i>
                            }
                            else
                            {
                                <i class="bi bi-star text-warning"></i>
                            }
                        }
                    </div>
                    <p class="text-muted mb-0">@reviewCount Reviews</p>
                </div>
                <div class="col-md-8">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Customer Reviews</h5>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Create" asp-route-productId="@productId" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Write a Review
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login to Review
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var review in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <div class="mb-1">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-warning"></i>
                                            }
                                        }
                                        @if (review.IsVerifiedPurchase)
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="bi bi-check-circle me-1"></i>Verified Purchase
                                            </span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(review.Title))
                                    {
                                        <h5 class="mb-2">@review.Title</h5>
                                    }
                                    <p class="text-muted mb-0">
                                        <small>
                                            By <strong>@review.UserName</strong> on @review.ReviewDate.ToString("MMMM dd, yyyy")
                                        </small>
                                    </p>
                                </div>
                                @if (User.Identity.IsAuthenticated && (review.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value || User.IsInRole("Admin")))
                                {
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@review.ReviewId" class="btn btn-outline-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@review.ReviewId" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                <p class="mb-0">@review.Comment</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-chat-quote display-1 text-muted"></i>
            <h4 class="mt-3">No Reviews Yet</h4>
            <p class="text-muted">Be the first to review this product!</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Create" asp-route-productId="@productId" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle me-2"></i>Write the First Review
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
