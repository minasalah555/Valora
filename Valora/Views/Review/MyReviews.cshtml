@model List<Valora.DTOs.ReviewDTO>
@{
    ViewData["Title"] = "My Reviews";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-star-fill me-2"></i>My Reviews
            </h2>
            <hr class="mb-4">
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var review in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-2">@review.ProductName</h5>
                                    <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-warning"></i>
                                            }
                                        }
                                        @if (review.IsVerifiedPurchase)
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="bi bi-check-circle me-1"></i>Verified
                                            </span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(review.Title))
                                    {
                                        <h6 class="mb-2">@review.Title</h6>
                                    }
                                    <p class="text-muted mb-0">
                                        <small>
                                            <i class="bi bi-calendar me-1"></i>@review.ReviewDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </p>
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@review.ReviewId" class="btn btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@review.ReviewId" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                <p class="card-text">@review.Comment</p>
                            }
                            <a asp-action="ProductReviews" asp-route-id="@review.ProductId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye me-1"></i>View All Reviews
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-chat-quote display-1 text-muted"></i>
            <h4 class="mt-3">No Reviews Yet</h4>
            <p class="text-muted">You haven't written any reviews yet. Share your experience with products!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-shop me-2"></i>Browse Products
            </a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
