@model Valora.ViewModels.UpdateReviewViewModel
@{
    ViewData["Title"] = "Edit Review";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Review
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="ReviewId" />

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-star me-1"></i>Rating *
                            </label>
                            <div class="rating-input">
                                <div class="btn-group" role="group">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        var starValue = i;
                                        <input type="radio" class="btn-check" name="Rating" id="rating@(starValue)" value="@starValue" asp-for="Rating">
                                        <label class="btn btn-outline-warning" for="rating@(starValue)">
                                            @starValue <i class="bi bi-star-fill"></i>
                                        </label>
                                    }
                                </div>
                            </div>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="bi bi-type me-1"></i>Review Title (Optional)
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Summarize your review in a few words" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Comment" class="form-label">
                                <i class="bi bi-chat-left-text me-1"></i>Your Review (Optional)
                            </label>
                            <textarea asp-for="Comment" class="form-control" rows="6" placeholder="Share your thoughts about this product..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                            <small class="text-muted">Maximum 1000 characters</small>
                        </div>

                        <hr>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="MyReviews" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Update Review
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .rating-input .btn-check:checked + .btn {
            background-color: #ffc107;
            color: white;
        }
    </style>
}
