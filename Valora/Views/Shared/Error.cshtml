@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white d-flex align-items-center">
                    <h4 class="mb-0 text-uppercase" style="letter-spacing:.08em; font-size:.95rem;">
                        <i class="bi bi-exclamation-octagon me-2"></i>Something went wrong
                    </h4>
                </div>
                <div class="card-body">
                    <p class="lead text-muted">An unexpected error occurred while processing your request.</p>

                    @if (Model?.ShowRequestId == true)
                    {
                        <div class="mb-3">
                            <strong>Request ID:</strong>
                            <div class="bg-light border p-2 mt-1"><code>@Model.RequestId</code></div>
                        </div>
                    }

                    <p class="text-muted small">If the problem persists, please contact support and include the Request ID above to help us investigate.</p>

                    <div class="d-flex justify-content-end mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-house-door me-1"></i>Home
                        </a>
                        <a href="javascript:location.reload()" class="btn btn-dark">
                            <i class="bi bi-arrow-clockwise me-1"></i>Retry
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
