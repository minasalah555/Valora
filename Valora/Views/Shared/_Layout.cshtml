<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Valora</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Valora.styles.css" asp-append-version="true" />
    @inject Valora.Data.Context Db
    <style>
        :root { --v-bg:#fff; --v-fg:#111; --v-muted:#6c757d; --v-border:#d9d9d9; --v-accent:#111; --v-accent-soft:#f2f2f2; }
        body { 
            background:var(--v-bg); 
            color:var(--v-fg); 
            font-family:system-ui,-apple-system,"Segoe UI",Roboto,Helvetica,Arial,sans-serif;
            padding-top: 0 !important;
        }
        
        /* Fixed Header - Always Visible */
        header {
            position: fixed !important;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
            width: 100%;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        
        /* Add padding to body to compensate for fixed header */
        body {
            padding-top: 80px !important;
        }
        
        main {
            padding-top: 1.5rem !important;
        }
        
        .navbar {
            position: relative !important;
            border-bottom:1px solid var(--v-border)!important;
            background:#fff!important;
            margin-bottom: 0 !important;
        }
        
        .navbar-nav { align-items:center; }
        .navbar .nav-link, .navbar-brand { letter-spacing:.08em; font-size:.8rem; text-transform:uppercase; font-weight:600; }
        .navbar .nav-link { position:relative; padding:.75rem .95rem; }
        .navbar .nav-link:after { content:""; position:absolute; left:50%; bottom:.4rem; width:0; height:2px; background:var(--v-accent); transition:width .3s ease, left .3s ease; }
        .navbar .nav-link:hover:after, .navbar .nav-link.active:after { width:60%; left:20%; }
        
        /* Category Dropdown with Hover */
        .category-dropdown-nav {
            position: relative;
        }
        
        .category-dropdown-menu-nav {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            min-width: 250px;
            max-height: 400px;
            overflow-y: auto;
            background: #fff;
            border: 1px solid #d1d1d1;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            opacity: 0;
            visibility: hidden;
            transform: translateX(-50%) translateY(-10px);
            transition: all 0.3s ease;
            z-index: 1031;
            margin-top: 0.5rem;
        }
        
        .category-dropdown-nav:hover .category-dropdown-menu-nav {
            opacity: 1;
            visibility: visible;
            transform: translateX(-50%) translateY(0);
        }
        
        .category-dropdown-item {
            display: block;
            padding: 0.75rem 1.5rem;
            text-decoration: none;
            color: #333;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            font-weight: 600;
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
        }
        
        .category-dropdown-item:hover {
            background: #f8f9fa;
            padding-left: 2rem;
            color: #111;
        }
        
        .category-dropdown-item:last-child {
            border-bottom: none;
        }
        
        main {
            padding-top: 1rem !important;
        }
        
        .dropdown-menu { border-radius:0; font-size:.8rem; letter-spacing:.05em; }
        .dropdown-item { padding:.45rem .9rem; }
        .dropdown-item:hover { background:var(--v-accent-soft); }
        .cart-link { display:flex; align-items:center; gap:.35rem; position:relative; font-weight:600; }
        .cart-link .cart-badge { position:absolute; top:-6px; right:-10px; background:var(--v-accent); color:#fff; border-radius:50%; min-width:20px; height:20px; padding:0 .25rem; display:flex; align-items:center; justify-content:center; font-size:.6rem; letter-spacing:.05em; }
        .cart-link svg { width:20px; height:20px; stroke-width:1.4; }
        .cart-link:hover { opacity:.85; }
        .hamburger { display:inline-block; width:20px; height:16px; position:relative; }
        .hamburger span { display:block; height:2px; background:var(--v-fg); margin:3px 0; border-radius:2px; transition:all .2s ease; }
        .nav-hamburger-btn { border:0; background:transparent; padding:.25rem .5rem; }
        .dropdown-menu-end { right:0; left:auto; }
        footer { background:#f8f9fa; border-top:1px solid var(--v-border); margin-top: 3rem; }
        a { color:inherit; text-decoration:none; }
        a:hover { color:inherit; opacity:.75; }
    </style>
</head>
<body>
    <header id="main-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Valora</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item category-dropdown-nav">
                            <a class="nav-link text-dark" href="#" role="button">Browse Categories</a>
                            <div class="category-dropdown-menu-nav">
                                @foreach (var category in Db.Categories.OrderBy(c => c.ID))
                                {
                                    <a href="@Url.Action("Index", "Category", new { categoryId = category.ID })" 
                                       class="category-dropdown-item">
                                        @category.Name
                                    </a>
                                }
                            </div>
                        </li>
                      
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="SignOut">LogOut</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ProductAdmin" asp-action="Index">Admin</a>
                                </li>
                            }
                        }
                        else
                        { 
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center gap-2">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a class="nav-link text-dark cart-link me-1" asp-area="" asp-controller="Cart" asp-action="UserCart" aria-label="View Cart">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2 9m12-9l2 9M9 22a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm8 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" />
                                </svg>
                                <span id="cartBadge" class="cart-badge" aria-label="Cart items">0</span>
                            </a>
                        }

                        <div class="dropdown">
                            <button class="btn nav-hamburger-btn dropdown-toggle" type="button" id="siteMenuDropdown" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Open site menu">
                                <span class="hamburger" aria-hidden="true">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="siteMenuDropdown">
                                @if (User?.Identity?.IsAuthenticated == true)
                                {
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">My Orders</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Profile</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="SignOut" method="post" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">Sign out</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a></li>
                                }

                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-4 text-muted small">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <span>&copy; 2025 Valora Art Marketplace</span>
            <nav class="d-flex gap-3">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </nav>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // ========================================
        // Cart Badge Update
        // ========================================
        document.addEventListener('DOMContentLoaded', () => {
            const badge = document.getElementById('cartBadge');
            if (!badge) return;
            fetch('@Url.Action("CartCount","Cart")')
                .then(r => r.json())
                .then(d => { badge.textContent = d.count; })
                .catch(() => { badge.textContent = '0'; });
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
