@model Valora.DTOs.CartDTO

@{
    ViewData["Title"] = "Your Cart";
}

<style>
    .cart-table th { text-transform:uppercase; font-size:.7rem; letter-spacing:.12em; }
    .cart-table td { vertical-align:middle; font-size:.8rem; }
    .cart-summary { background:#f8f9fa; border:1px solid #e1e1e1; padding:1rem; }
    .qty-input { width:70px; }
    .remove-btn { font-size:.65rem; letter-spacing:.08em; }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h5 text-uppercase" style="letter-spacing:.15em">Your Cart</h1>
    <span class="text-muted small">Cart #: @Model.CartId</span>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Items == null || !Model.Items.Any())
{
    <div class="alert alert-secondary rounded-0">
        Cart is empty. 
        <a asp-controller="Category" asp-action="Index" class="alert-link">Browse products</a>
    </div>
}
else
{
    <div class="row g-4">
        <div class="col-md-8">
            <table class="table cart-table table-sm">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th style="width:120px;">Quantity</th>
                        <th style="width:70px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>#@item.ProductId</td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            <form asp-action="RemoveItem" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="cartId" value="@Model.CartId" />
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-0 remove-btn">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="cart-summary">
                <h6 class="text-uppercase mb-3" style="letter-spacing:.1em">Summary</h6>
                <p class="mb-1 small">Items: <strong>@Model.Items.Sum(i=>i.Quantity)</strong></p>
                <p class="text-muted small">Prices not implemented yet.</p>
                <div class="d-grid gap-2 mt-3">
                    <a asp-controller="Order" asp-action="Create" asp-route-cartId="@Model.CartId" class="btn btn-dark rounded-0 text-uppercase">Checkout</a>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary rounded-0 text-uppercase">Continue Shopping</a>
                    <form asp-action="DeleteCart" method="post" class="mt-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="cartId" value="@Model.CartId" />
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100 rounded-0 text-uppercase" onclick="return confirm('Clear all items?')">Clear Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
