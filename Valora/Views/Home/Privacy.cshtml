@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white d-flex align-items-center">
                    <h4 class="mb-0 text-uppercase" style="letter-spacing:.08em; font-size:.95rem;">
                        <i class="bi bi-shield-lock me-2"></i>Privacy Policy
                    </h4>
                </div>
                <div class="card-body">
                    <p class="lead mb-4">Your privacy matters to us. This page explains what data we collect, why we collect it, and how we protect it.</p>

                    <h6 class="text-uppercase fw-bold mt-4">1. Information We Collect</h6>
                    <p class="text-muted">We may collect account information (name, email), order details, and product interaction data to improve your experience.</p>

                    <h6 class="text-uppercase fw-bold mt-4">2. How We Use Your Data</h6>
                    <p class="text-muted">Data is used for order processing, personalized recommendations, improving site performance, and security monitoring.</p>

                    <h6 class="text-uppercase fw-bold mt-4">3. Cookies</h6>
                    <p class="text-muted">We use cookies for session management, cart persistence, and analytics. You can disable cookies in your browser settings.</p>

                    <h6 class="text-uppercase fw-bold mt-4">4. Data Protection</h6>
                    <p class="text-muted">We implement encryption, restricted access, and regular audits to safeguard your personal data.</p>

                    <h6 class="text-uppercase fw-bold mt-4">5. Third-Party Services</h6>
                    <p class="text-muted">Some features (e.g. payment, analytics) rely on trusted third parties with their own privacy policies.</p>

                    <h6 class="text-uppercase fw-bold mt-4">6. Your Rights</h6>
                    <p class="text-muted">You may request access, correction, or deletion of your personal data. Contact support for assistance.</p>

                    <div class="alert alert-info mt-4 d-flex align-items-center" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        This policy may be updated periodically. Please revisit for the latest version.
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
