@model Valora.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    .auth-wrapper { min-height:70vh; display:flex; align-items:center; justify-content:center; }
    .auth-card { max-width:420px; width:100%; background:#fff; border:1px solid #dedede; padding:2.25rem 2rem; position:relative; }
    .auth-card h1 { font-size:1rem; text-transform:uppercase; letter-spacing:.18em; font-weight:600; margin-bottom:1.5rem; }
    .auth-card label { font-size:.65rem; text-transform:uppercase; letter-spacing:.12em; color:#555; font-weight:600; }
    .auth-card .form-control { border-radius:0; font-size:.85rem; }
    .auth-card .form-control:focus { box-shadow:none; border-color:#111; }
    .auth-card .btn-auth { text-transform:uppercase; letter-spacing:.15em; font-size:.7rem; font-weight:600; border-radius:0; }
    .auth-alt { text-align:center; margin-top:1.25rem; font-size:.7rem; letter-spacing:.08em; }
    .auth-alt a { text-decoration:none; }
    .brand-mark { position:absolute; top:-12px; left:1rem; background:#111; color:#fff; padding:.35rem .6rem; font-size:.55rem; letter-spacing:.15em; }
    .password-hint { font-size:.6rem; letter-spacing:.05em; color:#777; margin-top:.25rem; }
</style>

<div class="auth-wrapper">
    <div class="auth-card shadow-sm">
        <span class="brand-mark">VALORA</span>
        <h1>Register</h1>
        <form asp-action="Register" method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" autocomplete="username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
                <span class="password-hint">Minimum 6 chars recommended.</span>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-dark btn-auth py-2">Create Account</button>
            </div>
        </form>
        <div class="auth-alt">
            <span class="text-muted">Already have an account?</span> <a asp-action="Login" class="fw-semibold">Login</a>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
